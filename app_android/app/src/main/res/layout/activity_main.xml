<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_switch_light_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="switch_light_on"
        android:text="Light ON" />

    <Button
        android:id="@+id/btn_switch_light_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="switch_light_off"
        android:text="Light OFF" />

    <TextView
        android:id="@+id/TXT_topic_listener"
        android:layout_width="265dp"
        android:layout_height="47dp"></TextView>

</FrameLayout>